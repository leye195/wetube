extends ./layouts/main.pug
block content
    .form-container
        .video-container#record-container
            video#video__preview
            button#jsRecordBtn Start Recording
        form(action=routes.videos+routes.upload,method="post",enctype="multipart/form-data")
            .fileUpload
                label(for="video-file") Video File
                input(type="file",id="video-file",name="videofile",required=true)
            input(type="text",name="title",placeholder="title",required=true)
            textarea(name="description", cols="20", rows="5",placeholder="description",required=true,accept="video/*")
            input(type="submit",value="Upload Video")
            