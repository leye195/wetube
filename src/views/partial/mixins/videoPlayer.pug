mixin videoPlayer(video={})
    .video__player#js__player
        video(src=video.src)
        .videoPlayer__status
            span
                i.fas.fa-play.fa-2x
        .videoPlayer__controls
            .videoPlayer__column
                span
                    i.fas.fa-play
                span
                    span#currentTime 00:00:00
                    |/
                    span#totalTime 10:00:00
            .videoPlayer__column
                .videoPlayer__volume
                    input#videoPlayer__volume(type="range",min=0,max=1,step=0.01,value=0.4)
                    span
                        i.fas.fa-volume-down
                .videoPlayer__expand
                    span
                        i.fas.fa-expand
            