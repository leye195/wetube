extends ./layouts/main.pug
block content
    .form-container
        form(action=routes.users+routes.editProfile,method="post", enctype="multipart/form-data")
            .preview(style=`background-image:url(${loggedUser.avatarUrl})`)
            .fileUpload
                label(for="avatar") Avatar
                input(type="file",class="thumb",id="avatar",name="avatar",accept="image/*")
            input(type="text",name="name",placeholder="Full Name" value=loggedUser.name)
            input(type="email",name="email",placeholder="Email" value=loggedUser.email)
            input(type="submit",value="Update Profile")


